<p id="notice"><%= notice %></p>

<h1>Dogs</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Breed</th>
      <th>Color</th>
      <th>Size</th>
      <th>Location</th>
      <th>Date</th>
      <th>Description</th>
      <th>List</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.image %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.color %></td>
        <td><%= dog.size %></td>
        <td><%= dog.location %></td>
        <td><%= dog.date %></td>
        <td><%= dog.description %></td>
        <td><%= dog.list %></td>
        <td><%= dog.first_name %></td>
        <td><%= dog.last_name %></td>
        <td><%= dog.phone %></td>
        <td><%= dog.email %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

